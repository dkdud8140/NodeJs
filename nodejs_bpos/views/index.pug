extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display:flex;
			flex-wrap:wrap;

			justify-content:center;
			align-item:center;
		}
		div.table {
			width:200px;
			height:100px;
			margin:10px;

			text-align:center;
			line-height:100px;
			background-color:navy;
			font-weight:bold;
			color:white;

			cursor:pointer;
		}
		div.table:hover {
			box-shadow : 1px 1px 1px black ;
		}
		div.order_yes {
			background-color : black;
		}

	each table,index in TABLES
		if(table.order_count > 0)
			div.table.order_yes(data-table_id= table.id) !{table.table_name}
				span (!{table.order_count})
		else 
			div.table(data-table_id= table.id) !{table.table_name}
