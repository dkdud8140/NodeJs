<style>
	section#table_board {
		width: 100%;
		height: 100vh;
	}

	
	div#table_head {
		width: 100%;
		height: 100px;
		padding: 2rem;
		text-align: center;
	}

	div#tables {
		width: 100%;
		height: 80%;
		display: grid;
		grid-template-rows: repeat(3, 1fr);
  		grid-template-columns: repeat(4, 1fr);
		gap: 50px;
		padding:80px;
	}

	section#table_board div.table{
		border-radius: 10px;
		border : 2px solid #ccc;
		text-align: center;
		padding-top: 20%;
		z-index: 10;
	}

	section#table_board div.table:hover{
		border : 2px solid rgba(0, 0, 0, 0);
		background-color: rgba(51, 51, 51, 0.5);
		color: wheat;
		cursor: pointer;
	}

</style>


<section id="table_board">
	<div id="table_head">
		<h2>좌석 현황 보기</h2>
	</div>

	<div id = "tables">
		<div class="table" id="table" data-tNum="1"><p>1번 테이블</p></div>
		<div class="table" id="table" data-tNum="2"><p>2번 테이블</p></div>
		<div class="table" id="table" data-tnum="3"><p>3번 테이블</p></div>
		<div class="table" id="table" data-tnum="4"><p>4번 테이블</p></div>
		<div class="table" id="table" data-tnum="5"><p>5번 테이블</p></div>
		<div class="table" id="table" data-tnum="6"><p>6번 테이블</p></div>
		<div class="table" id="table" data-tnum="7"><p>7번 테이블</p></div>
		<div class="table" id="table" data-tnum="8"><p>8번 테이블</p></div>
		<div class="table" id="table" data-tnum="9"><p>9번 테이블</p></div>
		<div class="table" id="table" data-tnum="10"><p>10번 테이블</p></div>
		<div class="table" id="table" data-tnum="11"><p>11번 테이블</p></div>
		<div class="table" id="table" data-tnum="12"><p>12번 테이블</p></div>
	</div>
	
</section>
	
<script>
	document.querySelector("div#tables").addEventListener("click",(e)=>{
		const tId = e.target.id;
		
		if(tId == "table" ) {
			const tNum = e.target.dataset.tnum ; 
			document.location.href = `/pos/tview?tnum=${tNum}&tmenu=kim`;
		};
	})
</script>